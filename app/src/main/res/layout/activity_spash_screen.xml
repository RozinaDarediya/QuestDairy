<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:background="@color/spash_screen_bg"
    tools:context="com.example.admin.questdairy.Spash_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:id="@+id/l2">
        <TextView
            android:id="@+id/tvsp"
            android:shadowColor="#ff6cc450"
            android:shadowRadius="5"
            android:shadowDy="5"
            android:shadowDx="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="QUEST DIARY"
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="70sp"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:textColor="@color/spash_text"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:id="@+id/l1">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginRight="40dp"
           android:layout_marginLeft="40dp"
           android:layout_marginBottom="40dp"
           android:layout_marginTop="0dp"
           android:id="@+id/iv"
           android:src="@drawable/spash_screen"/>
    </LinearLayout>


</LinearLayout>
